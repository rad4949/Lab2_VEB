@model IEnumerable<Model>

<h2>Table Models</h2>
<div class="d-flex justify-content-end">
    <a asp-action="Create" type="button" class="btn btn-success ">Create new model</a>
</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Id</th>
            <th scope="col">Model name</th>
            <th scope="col">Body type</th>
            <th scope="col">Garantee</th>
            <th scope="col">BrandId</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 1;
            foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@i</th>
                    <td>@item.Id</td>
                    <td>@item.NameModel</td>
                    <td>@item.BodyType</td>
                    <td>@item.Guarantee</td>
                    <td>@item.BrandId</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-secondary">Update</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                        </div>
                    </td>
                </tr>
                i++;
            }
        }
    </tbody>
</table>