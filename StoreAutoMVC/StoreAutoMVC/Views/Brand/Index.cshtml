@model IEnumerable<Brand>

<h2>Table Brands</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Id</th>
            <th scope="col">Brand name</th>
            <th scope="col">Country</th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 1;
            foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@i</th>
                    <td>@item.Id</td>
                    <td>@item.NameBrand</td>
                    <td>@item.ProducingCountry</td>
                </tr>
                i++;
            }
        }
    </tbody>
</table>